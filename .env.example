# アプリケーション設定
PORT=3000
NODE_ENV=development
APP_URL=http://localhost:3000

# データベース設定
DATABASE_URL=postgresql://postgres:password@localhost:5432/timeline_db

# Redis設定（キャッシュ用）
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT認証設定
JWT_ACCESS_SECRET=your_access_secret_key_here
JWT_REFRESH_SECRET=your_refresh_secret_key_here
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# パスワードリセット設定
PASSWORD_RESET_EXPIRES_IN_HOURS=1

# メール設定
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USER=user@example.com
MAIL_PASSWORD=your_mail_password
MAIL_FROM="アプリケーション" <noreply@example.com>

# API レート制限設定
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# OAuth設定 - Google
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# OAuth設定 - GitHub
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_CALLBACK_URL=http://localhost:3000/auth/github/callback

# OAuth リダイレクト設定
OAUTH_SUCCESS_REDIRECT=http://localhost:3000/auth/success
OAUTH_FAILURE_REDIRECT=http://localhost:3000/auth/login